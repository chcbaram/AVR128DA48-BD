{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "avrdude boot",
      "type": "shell",
      "command": "avrdude -C${workspaceFolder}/tools/avrdude/avrdude.conf -v -pavr128da48 -cpkobn_updi -e -U flash:w:${workspaceFolder}/build/avr128da_boot.hex:i",
      "options": {
        "cwd": "${workspaceFolder}/tools/avrdude"
      }      
    },
    {
      "label": "avrdude BOOTSIZE 0",
      "type": "shell",
      "command": "avrdude -C${workspaceFolder}/tools/avrdude/avrdude.conf -v -pavr128da48 -cpkobn_updi -U fuse8:w:0:m",
      "options": {
        "cwd": "${workspaceFolder}/tools/avrdude"
      }      
    },
    {
      "label": "avrdude BOOTSIZE 16KB",
      "type": "shell",
      "command": "avrdude -C${workspaceFolder}/tools/avrdude/avrdude.conf -v -pavr128da48 -cpkobn_updi -U fuse8:w:32:m",
      "options": {
        "cwd": "${workspaceFolder}/tools/avrdude"
      }      
    },
    {
      "label": "build boot",
      "type": "shell",
      "command": "cmake --build build -j16"
    }
  ]
}